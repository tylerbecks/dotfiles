// Place your key bindings in this file to overwrite the defaults
[
  // ─────────────────────────────────────────────────────────────
  // Editor
  // ─────────────────────────────────────────────────────────────
  {
    "key": "cmd+'",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "tab",
    "command": "-editor.emmet.action.expandAbbreviation",
    "when": "config.emmet.triggerExpansionOnTab && editorTextFocus && !editorReadonly && !editorTabMovesFocus"
  },
  {
    "key": "alt+]",
    "command": "-editor.action.inlineSuggest.showNext",
    "when": "inlineSuggestionVisible && !editorReadonly"
  },
  {
    "key": "ctrl+]",
    "command": "editor.action.inlineSuggest.showNext"
  },
  {
    "key": "alt+]",
    "command": "-editor.action.accessibleViewNext",
    "when": "accessibleViewIsShown"
  },

  // ─────────────────────────────────────────────────────────────
  // Terminal
  // ─────────────────────────────────────────────────────────────
  {
    "key": "cmd+k",
    "command": "-cursorai.action.generateInTerminal",
    "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  {
    "key": "cmd+k",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus"
  },
  {
    "key": "shift+enter",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "\\\r\n"
    },
    "when": "terminalFocus"
  },

  // ─────────────────────────────────────────────────────────────
  // Cursor AI - Disabled defaults
  // ─────────────────────────────────────────────────────────────
  {
    "key": "cmd+k",
    "command": "-aipopup.action.modal.generate",
    "when": "editorFocus && !composerBarIsVisible"
  },
  {
    "key": "shift+cmd+k",
    "command": "-aipopup.action.modal.generate",
    "when": "editorFocus && !composerBarIsVisible"
  },
  {
    "key": "cmd+l",
    "command": "-aichat.newchataction"
  },
  {
    "key": "cmd+escape",
    "command": "-workbench.action.chat.cancel"
  },
  {
    "key": "cmd+escape",
    "command": "-workbench.action.backgroundComposer.escapeToClose",
    "when": "backgroundComposerEnabled && isInBackgroundComposerWindow"
  },
  // {
  //   "key": "shift+cmd+l",
  //   "command": "-aichat.insertselectionintochat"
  // },
  // {
  //   "key": "shift+cmd+l",
  //   "command": "-composer.newAgentChat"
  // },

  // ─────────────────────────────────────────────────────────────
  // Cursor AI - Remapped
  // ─────────────────────────────────────────────────────────────
  {
    "key": "cmd+i",
    "command": "composerMode.agent"
  },
  {
    "key": "ctrl+alt+cmd+l",
    "command": "aichat.newchataction"
  },
  {
    "key": "ctrl+shift+alt+cmd+l",
    "command": "aichat.insertselectionintochat"
  },

  // ─────────────────────────────────────────────────────────────
  // Claude Code
  // ─────────────────────────────────────────────────────────────
  {
    "key": "alt+cmd+k",
    "command": "-bookmarks.toggle",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+cmd+k",
    "command": "-keybindings.editor.recordSearchKeys",
    "when": "inKeybindings && inKeybindingsSearch"
  },
  {
    "key": "alt+cmd+k",
    "command": "-claude-code.insertAtMentioned",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+alt+cmd+k",
    "command": "claude-code.insertAtMentioned",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+alt+cmd+y",
    "command": "claude-code.acceptProposedDiff"
  },
  {
    "key": "ctrl+shift+alt+cmd+n",
    "command": "claude-code.rejectProposedDiff"
  }
]
