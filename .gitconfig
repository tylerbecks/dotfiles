[alias]
	s = status
	co = checkout
	b = branch -v --sort=-committerdate
	del = branch -D
	c = commit
	d = diff
	undo = reset HEAD~1 --mixed
	unstage = reset HEAD --
	last = log --name-only --relative-date --abbrev-commit -1 HEAD
	rhist = log --color --graph --all --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	hist = log --color --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	f = fetch
	r = rebase origin/master
	a = add --all
	oops = commit --amend --no-edit
	enforce = push --force-with-lease
[push]
	default = current
	autoSetupRemote = true
[user]
	name = Tyler Becks
	email = tylerdbecks@gmail.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIAvSfUCULOJ7W3ZfnTS88VJXrhYB9TcNWsl/ONY8Khfu
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autoStash = true
	autosquash = true
[sequence]
	editor = code --wait
[rerere]
	enabled = true
	autoUpdate = true
[core]
	pager = delta
	editor = code --wait
[interactive]
	diffFilter = delta
[add.interactive]
	useBuiltin = false # required for git 2.37.0
[diff]
	algorithm = histogram
	colorMoved = default
	colorMovedWS = allow-indentation-change
	external = difft
  tool = difftastic
[pager]
	difftool = true
[merge]
	conflictstyle = zdiff3
[difftool]
  prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[mergetool]
  prompt = false
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
	verbose = true
[maintenance]
	repo = /Users/tylerbecks/Code/fuego-frontend
[branch]
	sort = -committerdate
