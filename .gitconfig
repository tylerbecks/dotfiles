[user]
	name = Tyler Becks
	email = tylerdbecks@gmail.com
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[init]
	defaultBranch = main
[alias]
	s = status -s
	co = checkout
	b = branch -v
	del = branch -D
	c = "!better-commits"
	d = diff
	undo = reset HEAD~1 --mixed
	unstage = reset HEAD --
	last = log --name-only --relative-date --abbrev-commit -1 HEAD
	rhist = log --color --graph --all --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	hist = log --color --graph --branches --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	f = fetch
	r = "!f() { git rev-parse --verify --quiet origin/main && git rebase origin/main || git rebase origin/master; }; f"
	a = add --all
	oops = commit --amend --no-edit
	enforce = push --force-with-lease
	cleanup = "!git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D"
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[fetch]
	all = true
	prune = true
	pruneTags = true
	fsckobjects = true

[transfer]
	fsckobjects = true

[receive]
	fsckobjects = true

[grep]
	lineNumber = true
	fallbackToNoIndex = true
[pull]
	rebase = true
[rebase]
	autoStash = true
	autosquash = true
	updateRefs = true
[help]
	autocorrect = prompt
[sequence]
	editor = code --wait
[rerere]
	enabled = true
	autoUpdate = true
[core]
	pager = delta
	editor = code --wait
	excludesfile = ~/.gitignore
	fsmonitor = true
	untrackedCache = true
	whitespace = blank-at-eol,space-before-tab,-indent-with-non-tab,-tab-in-indent,blank-at-eof

[apply]
	whitespace = fix
[interactive]
  diffFilter = delta --color-only
[add.interactive]
	useBuiltin = false # required for git 2.37.0
[diff]
	algorithm = patience
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
	colorMovedWS = allow-indentation-change
	external = difft
  tool = difftastic
[pager]
	difftool = true
[merge]
	conflictstyle = zdiff3
[difftool]
  prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[mergetool]
  prompt = false
[gpg]
	format = ssh
[commit]
	gpgSign = false
	verbose = true
